#include <stdio.h>
#include <stdlib.h>


int primo (int n1){
    int cont, div = 0;
    for (cont = 1; cont <=n1; cont++){
        if (n1%cont ==0)
            div++;
    }
    if (div==2)
        return 1;
    else
        return 0;
}
int main(void){
    int n1 = 0;
    do{
        printf("Digite um numero: ");
        scanf("%d", &n1);
        if (n1==0)
            printf ("Voce nÃ£o pode digitar zero!");
            else{
                if (primo (n1))
                    printf("O numero %d eh primo", n1);
                else
                    printf ("O numero %d nao eh primo!", n1);
            }
    }while(n1==0);
}
