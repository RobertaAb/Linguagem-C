#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{

    int i = 0, cont =0, j =0;
    char dados [50], invertido[50];
    printf("Digite a sequencia:\n\n", 136);
    gets (dados);
    while (dados[i] != '\0')
    {
        cont++;
        i++;
    }
    printf ("\n\nOrdem inversa:\n\n");
    for (i = cont; i>=0; i--)
    {
        if (dados [i] != '\0')
    {
      printf ("%C", dados [i]);
    invertido[j] = dados[i];
    j++;

}
}
invertido[j] = '\0';
if (strcmp(dados, invertido)==0)
{

    printf("\n\n Pal%cndromo!\n\n, 161");
}
else
{

    printf("\n\n N%co %c um pal%cndromo!\n\n", 198, 130, 161);
}
printf("\n\n");
system("pause");
return(0);
}
